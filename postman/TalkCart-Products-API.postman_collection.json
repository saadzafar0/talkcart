                  "pm.test(\"All products match price range\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    jsonData.data.products.forEach(function(product) {",
                  "        pm.expect(product.base_price).to.be.at.least(50);",
                  "        pm.expect(product.base_price).to.be.at.most(300);",
                  "    });",
                  "});"
