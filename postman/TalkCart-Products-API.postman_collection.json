    {
      "name": "Product Search (RAG)",
      "item": [
        {
          "name": "Semantic Search - Summer Wedding",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response contains search results\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('products');",
                  "    pm.expect(jsonData.data).to.have.property('query');",
                  "    pm.expect(jsonData.data).to.have.property('count');",
                  "});",
                  "",
                  "pm.test(\"Query matches request\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.query).to.equal(pm.request.body.raw ? JSON.parse(pm.request.body.raw).query : '');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"outfit for summer wedding in Italy\",\n  \"limit\": 10\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/search",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "search"]
            },
